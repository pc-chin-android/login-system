<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_light"
    android:orientation="vertical"
    tools:context=".UserInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
         <Space
             android:layout_width="match_parent"
             android:layout_height="20dp" />

        <ImageView
            android:id="@+id/info_profile_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/blank"
            app:srcCompat="@drawable/user" />

        <TextView
            android:id="@+id/info_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:text="@string/blank"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/info_userid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:text="@string/blank"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/info_full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/blank"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/info_creation_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/blank"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/info_birthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/blank"
            android:textSize="24sp" />

        <Button
            android:id="@+id/info_edit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="0.08"
            android:onClick="onBtnPressed"
            android:text="@string/edit_profile"
            android:textSize="18sp" />

        <Button
            android:id="@+id/info_access_admin"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="0.08"
            android:text="@string/access_admin"
            android:textSize="18sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/info_logout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="0.08"
            android:onClick="onLogoutPressed"
            android:text="@string/logout"
            android:textSize="18sp" />

        </LinearLayout>

</ScrollView>